import { supabase } from '../lib/supabase';

// Obtener categorÃ­as activas que tienen items disponibles
const { data: allItems, error: itemsError } = await supabase
  .from('menu_items')
  .select('category_id')
  .eq('is_available', true);

const categoryIdsWithItems = [...new Set((allItems || []).map(item => item.category_id).filter(Boolean))];

let activeCategories: any[] = [];
if (categoryIdsWithItems.length > 0) {
  const { data: cats } = await supabase
    .from('categories')
    .select('*')
    .eq('is_active', true)
    .in('id', categoryIdsWithItems)
    .order('order_num', { ascending: true });
  
  activeCategories = cats || [];
}
