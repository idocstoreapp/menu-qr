---
import AdminLayout from '../../layouts/AdminLayout.astro';
import AdminMenuManager from '../../components/admin/AdminMenuManager';
import { getAuthUser } from '../../lib/api-helpers';
import { initDatabase } from '../../db/index';

await initDatabase();

// Verificar autenticación
const user = getAuthUser(Astro);
if (!user) {
  return Astro.redirect('/admin/login');
}
---

<AdminLayout title="Panel de Administración">
  <div class="min-h-screen p-4 md:p-8">
    <div class="max-w-7xl mx-auto">
      <header class="mb-8">
        <h1 class="text-2xl md:text-4xl font-cinzel text-gold-400 mb-4">Panel de Administración</h1>
        <nav class="flex flex-col md:flex-row gap-2 md:gap-4 mb-6">
          <div class="flex flex-wrap gap-2 md:gap-4">
            <a href="/admin" class="bg-gold-600 text-arabic-dark px-4 py-2 rounded hover:bg-gold-500 transition text-sm md:text-base">
              Items del Menú
            </a>
            <a href="/admin/combo-menus" class="bg-arabic-brown text-gold-400 px-4 py-2 rounded hover:bg-terracotta-600 transition text-sm md:text-base">
              Menús Combinados
            </a>
            <a href="/admin/promotions" class="bg-arabic-brown text-gold-400 px-4 py-2 rounded hover:bg-terracotta-600 transition text-sm md:text-base">
              Promociones
            </a>
            <a href="/admin/daily-menu" class="bg-arabic-brown text-gold-400 px-4 py-2 rounded hover:bg-terracotta-600 transition text-sm md:text-base">
              Menú del Día
            </a>
          </div>
          <form method="POST" action="/api/logout" class="md:ml-auto">
            <button type="submit" class="w-full md:w-auto bg-red-600 text-cream px-4 py-2 rounded hover:bg-red-500 transition text-sm md:text-base">
              Cerrar Sesión
            </button>
          </form>
        </nav>
      </header>

      <div class="bg-arabic-dark p-4 md:p-6 rounded-lg border-2 border-gold-600">
        <AdminMenuManager client:load />
      </div>
    </div>
  </div>
</AdminLayout>


