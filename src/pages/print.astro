---
import PublicLayout from '../layouts/PublicLayout.astro';
import { initDatabase } from '../db/index';
import { db } from '../db/index';
import { categories } from '../db/schema';
import { eq, asc } from 'drizzle-orm';
import { staticMenuItems } from '../data/menu-items';
import { sql } from 'drizzle-orm';

await initDatabase();

// Cargar precios editados
let priceOverrides: Record<number, number> = {};
try {
  await db.run(sql`
    CREATE TABLE IF NOT EXISTS price_overrides (
      item_id INTEGER PRIMARY KEY,
      price REAL NOT NULL,
      updated_at INTEGER NOT NULL DEFAULT (unixepoch())
    )
  `);
  const result = await db.all(sql`SELECT item_id, price FROM price_overrides`);
  for (const row of result as any[]) {
    priceOverrides[row.item_id] = row.price;
  }
} catch (error) {
  console.error('Error cargando precios:', error);
}

// Obtener categor√≠as
const allCategories = await db.select()
  .from(categories)
  .where(eq(categories.isActive, true))
  .orderBy(asc(categories.order), asc(categories.name));

// Crear mapa slug -> id
const categorySlugToId = new Map<string, number>();
const categoryIdToData = new Map<number, any>();
for (const cat of allCategories) {
  categorySlugToId.set(cat.slug, cat.id);
  categoryIdToData.set(cat.id, cat);
}

// Procesar items est√°ticos
const itemsByCategory = new Map<number, any[]>();

for (const item of staticMenuItems) {
  if (!item.isAvailable) continue;
  
  const categoryId = categorySlugToId.get(item.categorySlug);
  if (!categoryId) continue;
  
  const finalPrice = priceOverrides[item.id] !== undefined 
    ? priceOverrides[item.id] 
    : item.price;
  
  if (!itemsByCategory.has(categoryId)) {
    itemsByCategory.set(categoryId, []);
  }
  
  itemsByCategory.get(categoryId)!.push({
    ...item,
    categoryId,
    price: finalPrice,
    category: categoryIdToData.get(categoryId),
  });
}

// Ordenar items dentro de cada categor√≠a
for (const [categoryId, items] of itemsByCategory.entries()) {
  items.sort((a, b) => {
    if (a.order !== b.order) return a.order - b.order;
    return a.name.localeCompare(b.name);
  });
}

// Organizar categor√≠as para impresi√≥n (todas las p√°ginas necesarias)
const categoriesForPrint = allCategories
  .filter(cat => itemsByCategory.has(cat.id) && itemsByCategory.get(cat.id)!.length > 0)
  .map(cat => ({
    ...cat,
    items: itemsByCategory.get(cat.id)!,
  }));

// Dividir en p√°ginas de manera inteligente
// Intentar mantener aproximadamente 2 p√°ginas, pero permitir m√°s si es necesario
const itemsPerPage = 15; // Aproximadamente 15 items por p√°gina
let totalItems = 0;
for (const cat of categoriesForPrint) {
  totalItems += cat.items.length;
}

const estimatedPages = Math.max(2, Math.ceil(totalItems / itemsPerPage));
const categoriesPerPage = Math.ceil(categoriesForPrint.length / estimatedPages);

// Dividir categor√≠as en p√°ginas
const pages: typeof categoriesForPrint[] = [];
for (let i = 0; i < categoriesForPrint.length; i += categoriesPerPage) {
  pages.push(categoriesForPrint.slice(i, i + categoriesPerPage));
}

const formatPrice = (price: number) => {
  if (price === 0) return 'Consultar';
  return new Intl.NumberFormat('es-CL', {
    style: 'currency',
    currency: 'CLP',
    minimumFractionDigits: 0,
  }).format(price);
};
