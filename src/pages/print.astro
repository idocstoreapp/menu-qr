import PublicLayout from '../layouts/PublicLayout.astro';
import { supabase } from '../lib/supabase';

// Obtener categor√≠as activas
const { data: categories } = await supabase
  .from('categories')
  .select('*')
  .eq('is_active', true)
  .order('order_num', { ascending: true });

// Obtener items disponibles
const { data: items } = await supabase
  .from('menu_items')
  .select('*')
  .eq('is_available', true)
  .order('order_num', { ascending: true });

// Agrupar items por categor√≠a
const itemsByCategory = new Map();
for (const item of items || []) {
  if (item.category_id) {
    if (!itemsByCategory.has(item.category_id)) {
      itemsByCategory.set(item.category_id, []);
    }
    itemsByCategory.get(item.category_id).push(item);
  }
}

// Filtrar categor√≠as con items
const categoriesForPrint = (categories || []).filter(cat => 
  itemsByCategory.has(cat.id) && itemsByCategory.get(cat.id).length > 0
).map(cat => ({
  ...cat,
  items: itemsByCategory.get(cat.id)
}));

// Dividir en p√°ginas (m√°ximo ~12 items por p√°gina para mejor visualizaci√≥n)
const itemsPerPage = 12;
let totalItems = 0;
for (const cat of categoriesForPrint) {
  totalItems += cat.items.length;
}

// Calcular n√∫mero de p√°ginas necesarias
const estimatedPages = Math.max(2, Math.ceil(totalItems / itemsPerPage));
const categoriesPerPage = Math.ceil(categoriesForPrint.length / estimatedPages);

// Dividir categor√≠as en p√°ginas
const pages: typeof categoriesForPrint[] = [];
for (let i = 0; i < categoriesForPrint.length; i += categoriesPerPage) {
  pages.push(categoriesForPrint.slice(i, i + categoriesPerPage));
}

// Si no hay p√°ginas, crear al menos una vac√≠a para mostrar mensaje
if (pages.length === 0) {
  pages.push([]);
}

const formatPrice = (price: number) => {
  if (price === 0) return 'Consultar';
  return new Intl.NumberFormat('es-CL', {
    style: 'currency',
    currency: 'CLP',
    minimumFractionDigits: 0,
  }).format(price);
};

// Funci√≥n para detectar si un item contiene carne
const hasMeat = (itemName: string, description: string = '') => {
  const meatKeywords = ['carne', 'pollo', 'kebab', 'kebbab', 'mixto', 'vacuno', 'halal'];
  const text = `${itemName} ${description}`.toLowerCase();
  return meatKeywords.some(keyword => text.includes(keyword));
};
